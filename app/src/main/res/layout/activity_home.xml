<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:background="#33abe7"
            android:paddingTop="27dp"
            android:theme="@style/HomeToolbar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0" />

        <ImageView
            android:id="@+id/img_home_task_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="35dp"
            android:scaleType="centerCrop"
            android:src="@drawable/home_task_list_img"
            app:layout_constraintBottom_toBottomOf="@id/toolbar"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintLeft_toLeftOf="@id/toolbar"
            app:layout_constraintTop_toTopOf="@id/toolbar" />

        <TextView
            android:id="@+id/tv_home_task_list_deviceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="35dp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/toolbar"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintLeft_toLeftOf="@id/toolbar"
            app:layout_constraintRight_toRightOf="@id/toolbar"
            app:layout_constraintTop_toTopOf="@id/toolbar" />

        <ImageView
            android:id="@+id/img_direction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/down_white_img"
            app:layout_constraintBottom_toBottomOf="@id/tv_home_task_list_deviceName"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintLeft_toRightOf="@id/tv_home_task_list_deviceName"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_home_task_list_deviceName" />

        <TextView
            android:id="@+id/tv_currentState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="70dp"
            android:gravity="center"
            android:text="正常"
            android:textColor="#ffffff"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/img_home_task_list"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintLeft_toRightOf="@id/img_home_task_list"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/img_home_task_list" />

        <ImageView
            android:id="@+id/img_right"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:background="#51BC78"
            android:scaleType="fitCenter"
            android:src="@drawable/right_white_tranigle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tv_taskState"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintVertical_bias="0" />

        <ImageView
            android:id="@+id/img_left"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:background="#51BC78"
            android:scaleType="fitCenter"
            android:src="@drawable/left_white_tranigle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintVertical_bias="0" />

        <TextView
            android:id="@+id/tv_dataTime"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="#21A15B"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/img_left"
            app:layout_constraintRight_toLeftOf="@id/img_right"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintVertical_bias="0" />

        <TextView
            android:id="@+id/tv_taskState"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:background="#ECCD32"
            android:gravity="center"
            android:text="已停运"
            android:textColor="#ffffff"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintVertical_bias="0" />

        <TextView
            android:id="@+id/tv_taskInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#cccccc"
            android:gravity="center"
            android:text="当天无任务"
            android:textColor="#5A5454"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_taskState"
            app:layout_constraintVertical_bias="0" />

        <View
            android:id="@+id/view"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#5A5454"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_taskInfo" />
        <ProgressBar
            android:id="@+id/progress_refresh"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/view"
            app:layout_constraintLeft_toLeftOf="parent"
            style="?android:attr/progressBarStyleInverse"/>
        <ImageView
            android:id="@+id/img_allPrintSelect"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_white_printer"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/progress_refresh" />
        <LinearLayout
            android:id="@+id/liner_layout"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:background="#cccccc"
            app:layout_constraintLeft_toRightOf="@id/img_allPrintSelect"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/progress_refresh">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="时间"
                android:textColor="#5A5454"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/liner_tv_ku_one"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="一"
                android:textColor="#5A5454"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/liner_tv_ku_two"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="一"
                android:textColor="#5A5454"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/liner_tv_ku_three"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="一"
                android:textColor="#5A5454"
                android:textSize="16sp" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:visibility="gone"
            android:id="@+id/recyclerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/liner_layout" />

        <TextView
            android:id="@+id/tv_noData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="暂无数据"
            android:textColor="#5A5454"
            android:textSize="16sp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/liner_layout" />

        <ImageView
            android:id="@+id/img_right_bottom"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/img_gray_circle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/liner_layout"
            app:layout_constraintVertical_bias="1" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_right_bottom_printer"
            app:layout_constraintBottom_toBottomOf="@id/img_right_bottom"
            app:layout_constraintLeft_toLeftOf="@id/img_right_bottom"
            app:layout_constraintRight_toRightOf="@id/img_right_bottom"
            app:layout_constraintTop_toTopOf="@id/img_right_bottom" />


    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rl_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:background="#ffffff"
        android:layout_gravity="left"
        android:clickable="true"
        >
        <RelativeLayout
            android:id="@+id/drawlayout_left_layout"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:background="#4FC634"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0">
            <TextView
                android:id="@+id/drawlayout_left_loginName"
                android:text="登录用户:"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/drawlayout_left_layout_view"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="10dp"/>
            <View
                android:id="@+id/drawlayout_left_layout_view"
                android:layout_width="20dp"
                android:layout_height="1dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/drawlayout_left_loginDept"
                android:text="登录部门:"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/drawlayout_left_layout_view"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="10dp"/>
            <TextView
                android:id="@+id/drawlayout_left_loginName_tv"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="50dp"
                android:layout_toEndOf="@id/drawlayout_left_loginName"
                android:layout_alignTop="@id/drawlayout_left_loginName"
                android:layout_alignBottom="@id/drawlayout_left_loginName"/>
            <TextView
                android:id="@+id/drawlayout_left_loginDept_tv"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="50dp"
                android:layout_toEndOf="@id/drawlayout_left_loginDept"
                android:layout_alignTop="@id/drawlayout_left_loginDept"
                android:layout_alignBottom="@id/drawlayout_left_loginDept"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/drawlayout_left_layout_data"
            android:layout_width="280dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/drawlayout_left_layout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
            <ImageView
                android:id="@+id/img_am_tasks"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_white_printer"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"/>
            <TextView
                android:text="上午任务"
                android:textColor="#000000"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="30dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:clickable="true"
                android:id="@+id/recyclerView_am"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@id/img_am_tasks"
                android:layout_alignBottom="@id/drawlayout_left_layout_data_view"/>
            <TextView
                android:id="@+id/am_tv"
                android:visibility="gone"
                android:text="暂无任务"
                android:textSize="16sp"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/img_am_tasks"
                android:layout_alignBottom="@id/drawlayout_left_layout_data_view"/>
            <View
                android:id="@+id/drawlayout_left_layout_data_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cccccc"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/img_pm_tasks"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_white_printer"
                android:layout_alignTop="@id/drawlayout_left_layout_data_view"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"/>
            <TextView
                android:text="下午任务"
                android:textColor="#000000"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/drawlayout_left_layout_data_view"
                android:layout_marginTop="5dp"
                android:layout_marginStart="30dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:clickable="true"
                android:id="@+id/recyclerView_pm"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@id/img_pm_tasks"/>
            <TextView
                android:id="@+id/pm_tv"
                android:visibility="gone"
                android:text="暂无任务"
                android:textSize="16sp"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/img_pm_tasks"/>
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.drawerlayout.widget.DrawerLayout>