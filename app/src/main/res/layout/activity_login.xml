<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:focusableInTouchMode="true"
    android:focusable="true">
    <ImageView
        android:id="@+id/splash_top_img"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="#33abe7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />
    <TextView
        android:text="冷链运输管理终端"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/splash_top_img"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintVertical_bias="1"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"/>
    <ImageView
        android:id="@+id/splash_center_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/splash_center_img"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3"/>
    <EditText
        android:id="@+id/ed_ip"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="221.224.159.210"
        android:hint="请输入IP地址"
        android:imeOptions="actionNext"
        android:paddingStart="25dp"
        android:textSize="16sp"
        android:layout_marginStart="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintHorizontal_bias="0"/>
    <TextView
        android:text="IP"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/ed_ip"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/ed_ip"
        app:layout_constraintBottom_toBottomOf="@id/ed_ip"
        app:layout_constraintHorizontal_bias="0"/>
    <EditText
        android:id="@+id/ed_port"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="请输入端口号"
        android:text="38111"
        android:imeOptions="actionNext"
        android:paddingStart="40dp"
        android:textSize="16sp"
        android:layout_marginEnd="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ed_ip"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintHorizontal_bias="0"/>
    <TextView
        android:text="端口"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/ed_port"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/ed_port"
        app:layout_constraintBottom_toBottomOf="@id/ed_port"
        app:layout_constraintHorizontal_bias="0"/>
    <EditText
        android:id="@+id/ed_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="请输入账号"
        android:text="4600000000"
        android:imeOptions="actionNext"
        android:textSize="16sp"
        android:paddingStart="25dp"
        app:layout_constraintTop_toBottomOf="@id/ed_ip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/ed_ip"
        app:layout_constraintRight_toRightOf="@id/ed_port"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="0"/>
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/login_name_img"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="@id/ed_name"
        app:layout_constraintBottom_toBottomOf="@id/ed_name"
        app:layout_constraintLeft_toLeftOf="@id/ed_name"/>
    <EditText
        android:id="@+id/ed_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="请输入密码"
        android:text="Dev123123"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:textSize="16sp"
        android:paddingStart="25dp"
        app:layout_constraintTop_toBottomOf="@id/ed_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/ed_ip"
        app:layout_constraintRight_toRightOf="@id/ed_port"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="0"/>
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/login_password_img"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="@id/ed_password"
        app:layout_constraintBottom_toBottomOf="@id/ed_password"
        app:layout_constraintLeft_toLeftOf="@id/ed_password"/>
    <Button
        android:id="@+id/btn_login"
        android:text="登录"
        android:textColor="#ffffff"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/login_btn_bg"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintTop_toBottomOf="@id/ed_password"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/ed_password"
        app:layout_constraintRight_toRightOf="@id/ed_password"/>
</androidx.constraintlayout.widget.ConstraintLayout>